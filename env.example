# Smart Hive Solution - Environment Configuration
# Copy this file to .env and configure your settings

# Application Environment
APP_ENV=development
APP_NAME="Smart Hive Solution"
APP_URL=http://localhost:8000

# Database Configuration
DB_HOST=localhost
DB_NAME=smart_hive
DB_USER=root
DB_PASS=

# Authentication
MASTER_USERNAME=admin
MASTER_PASSWORD=admin123

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=alerts@smarthivesolution.com
SMTP_FROM_NAME="Smart Hive Solution"

# SMS Configuration (Twilio)
SMS_API_KEY=your-twilio-account-sid:your-twilio-auth-token
SMS_API_URL=https://api.twilio.com/2010-04-01/Accounts/{account_sid}/Messages.json
SMS_FROM_NUMBER=+1234567890

# Alert Thresholds
ALERT_THRESHOLD_TEMP_LOW=15
ALERT_THRESHOLD_TEMP_CRITICAL_LOW=10
ALERT_THRESHOLD_TEMP_HIGH=35
ALERT_THRESHOLD_TEMP_CRITICAL_HIGH=40

ALERT_THRESHOLD_HUMIDITY_LOW=30
ALERT_THRESHOLD_HUMIDITY_CRITICAL_LOW=20
ALERT_THRESHOLD_HUMIDITY_HIGH=80
ALERT_THRESHOLD_HUMIDITY_CRITICAL_HIGH=90

ALERT_THRESHOLD_GAS_HIGH=100
ALERT_THRESHOLD_GAS_CRITICAL_HIGH=200

ALERT_THRESHOLD_BATTERY_LOW=20
ALERT_THRESHOLD_BATTERY_CRITICAL_LOW=10

# Sensor Configuration
SENSOR_AUTH_ENABLED=true
SENSOR_DATA_RETENTION_DAYS=30

# Notification Settings
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=true
NOTIFICATION_BROWSER_ENABLED=true

# Security
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Logging
LOG_LEVEL=info
LOG_FILE=storage/logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5