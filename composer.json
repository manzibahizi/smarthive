{
    "name": "hivenova/smart-hive-solutions",
    "description": "Smart Hive Solutions - IoT-based Beekeeping Management System",
    "type": "project",
    "require": {
        "php": "^8.0",
        "heroku/heroku-buildpack-php": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S 0.0.0.0:${PORT:-8000} -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}