# Smart Hive Solution - Deployment Configuration
# This file contains deployment settings for various platforms

# Docker Hub Configuration
DOCKER_HUB_USERNAME: your-dockerhub-username
DOCKER_HUB_REPOSITORY: smart-hive-solution
DOCKER_HUB_TAG: latest

# GitHub Container Registry
GITHUB_REGISTRY: ghcr.io
GITHUB_REPOSITORY: your-username/smart-hive-solution

# Environment Variables for Production
DB_HOST: your-database-host
DB_NAME: smart_hive
DB_USER: your-db-user
DB_PASS: your-secure-password

# Application Settings
APP_ENV: production
APP_DEBUG: false
APP_URL: https://your-domain.com

# Notification Settings
SMTP_HOST: your-smtp-host
SMTP_PORT: 587
SMTP_USERNAME: your-email@domain.com
SMTP_PASSWORD: your-email-password
TWILIO_SID: your-twilio-sid
TWILIO_TOKEN: your-twilio-token
TWILIO_FROM: +1234567890

# Security Settings
MASTER_USERNAME: admin
MASTER_PASSWORD: your-secure-admin-password
SENSOR_AUTH_ENABLED: true

# Alert Thresholds
ALERT_THRESHOLD_TEMP_LOW: 15
ALERT_THRESHOLD_TEMP_CRITICAL_LOW: 10
ALERT_THRESHOLD_HUMIDITY_LOW: 30
ALERT_THRESHOLD_HUMIDITY_CRITICAL_LOW: 20
ALERT_THRESHOLD_GAS_HIGH: 100
ALERT_THRESHOLD_GAS_CRITICAL_HIGH: 200
ALERT_THRESHOLD_BATTERY_LOW: 20
ALERT_THRESHOLD_BATTERY_CRITICAL_LOW: 10
